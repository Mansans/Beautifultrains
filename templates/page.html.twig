<!DOCTYPE html>
<html{{ html_attributes }}>
  <head>
    <head-placeholder token="{{ placeholder_token }}">
    <title>{{ head_title }}</title>
    <css-placeholder token="{{ placeholder_token }}">
    <js-placeholder token="{{ placeholder_token }}">
  </head>
  <body{{ attributes.addClass('bg-light', 'text-dark') }}>
    <a href="#main-content" class="visually-hidden focusable skip-link">
      {{ 'Skip to main content'|t }}
    </a>

    {# Header #}
    <header class="bg-primary text-white py-5 mb-4">
      <div class="container d-flex justify-content-between align-items-center">
        <h1 class="h2 fw-bold mb-0">ðŸš‚ Beautiful Trains</h1>
        <nav class="d-flex align-items-center">
          {{ page.primary_menu }}
        </nav>
      </div>
    </header>

    {# Main Content #}
    <main id="main-content" role="main">
      <div class="container">
        {% if breadcrumb %}
          <nav aria-label="breadcrumb" class="mb-3">{{ breadcrumb }}</nav>
        {% endif %}

        {% if messages %}
          <div class="alert alert-info mt-3">
            {{ messages }}
          </div>
        {% endif %}

        {% block content %}
          <div class="bg-white p-4 rounded shadow-sm">
            {{ page.content }}
          </div>
        {% endblock %}
      </div>
    </main>

    {# Footer #}
    <footer class="bg-dark text-white py-4 mt-5">
      <div class="container text-center">
        <p class="mb-0">All Aboard! &copy; {{ "now"|date("Y") }} Beautiful Trains</p>
        <small class="text-muted">Crafted with passion for model railway enthusiasts.</small>
      </div>
    </footer>

    {{ page.bottom }}
    <js-bottom-placeholder token="{{ placeholder_token }}">
  </body>
</html>
